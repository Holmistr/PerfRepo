<?xml version="1.0" encoding="utf-8"?>

<!-- Configuration file for UrlRewriteFilter http://tuckey.org/urlrewrite/ -->

<urlrewrite>

   <!-- then forward to appropriate page without changing displayed URL -->
   <rule>
      <!-- /reports/metric/{testId}/{metricName}/{paramName} -->
      <from>^/reports/metric/([\w_]+)/([\w_]+)/([\w_]+)$</from>
      <to type="forward" last="true">/reports/metric.jsf?t=$1&amp;m=$2&amp;p=$3</to>
   </rule>
   
